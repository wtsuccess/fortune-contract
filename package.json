{
  "name": "hardhat-project",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "clean": "npx hardhat clean && rm -rf cache coverage coverage.json",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test-rpc": "npx hardhat node",
    "deploy-local": "npx hardhat run scripts/sample-script.js --network localhost",
    "coverage": "npx hardhat coverage",
    "typechain:generate": "yarn typechain --target=ethers-v5 ./contracts/**/*.sol --out-dir=./types",
    "deploy-fortune": "npx hardhat run scripts/deploy.cjs --network polygon",
    "deploy-usdc": "npx hardhat run scripts/deploy-usdc.cjs --network sepolia",
    "deploy-usdce": "npx hardhat run scripts/deploy-usdce.cjs --network sepolia",
    "deploy-testnet": "npx hardhat run scripts/deploy-testnet.cjs --network sepolia",
    "verify": "npx hardhat verify  --network polygon",
    "verify-testnet": "npx hardhat verify --network sepolia"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@chainlink/contracts": "^1.1.1",
    "@ethersproject/bignumber": "^5.7.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.8.2",
    "dotenv": "^16.4.5",
    "ethers": "^5.7.2",
    "hardhat-gas-reporter": "^2.2.0",
    "helpers": "^0.0.6"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "hardhat": "^2.14.0"
  }
}
